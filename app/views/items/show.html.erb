<%= link_to "Back to Wardrobe", wardrobe_path(@item.wardrobe) %>
<h1><%= @item.name %></h1>

<div>
    <ul>
      <li class="item-details"><%= image_tag @item.image.url %></li>
      <li class="item-details"><%= @item.name %></li>
      <li class="item-details"><%= @item.description %></li>
      <li class="item-details"><%= @item.category.category %></li>
      <li class="item-details"><%= link_to "Edit Item", edit_item_path(@item) %>
      <li class="item-details"><%= link_to "Delete Item", item_path, method: :delete, data: {confirm: "Are you sure you want to delete this item? "} %>

        <div class="dropdown">
        <!-- <button class="add-to-suitcase">Add to suitcase</button> -->
        <ul class="category-dropdown">
        <% @suitcases.each do |suitcase| %>
        <li><%= link_to "Add to #{suitcase.name}", items_suitcases_path(:item => @item.id, :suitcase => suitcase.id), :method => :post, :class => "category-menu" %></li>
        <% end %>
      </ul>
      </div>
    </ul>
</div>
