      <div id="box2" class="box" data-photo="#photo2">PackUp</div>

      <div id="box3" class="box" data-photo="#photo3">Ready&nbsp;To&nbsp;Go!</div>
   </div>

<!-- here there are the ids for the actual pictures! added a class for each photo and a class for all of them -->
    <div id="photo2" class="photo"></div>
