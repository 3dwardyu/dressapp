<!-- side nav pops out when clicking suitcase  -->
  <div id="suitcase-side-nav" class="sideNav">
    <button id="other-items">Other Items</button>
    <button id="view-all">View All</button>
    <button id="add-items">Add More Items</button>
    <button id="outfit-checker-button">Outfit Checker</button>
    <button id="close-nav">X</button>
  <div class="outfit-checker">
    </span><h4>Outfit checker</h4>

    <div id="tops" class="clothes-container">
        <div class="tops-container">
          <% @suitcase.items.each_with_index do |item, index| %>
            <% if item.category.category == "Top" %>
                <span class="clothes-item"><%= image_tag(item.image) %></span>
            <% end %>
          <% end %>
        </div>
      </div>


      <div id="bottoms" class="clothes-container">
          <div class="bottoms-container">
            <% @suitcase.items.each_with_index do |item, index| %>
              <% if item.category.category == "Bottom" %>
                <span class="clothes-item"><%= image_tag(item.image) %></span>


              <% end %>
            <% end %>

          </div>
        </div>

        <div id="shoes" class="clothes-container">
            <div class="shoes-container">
              <% @suitcase.items.each_with_index do |item, index| %>
                <% if item.category.category == "Shoes" %>
                    <span class="clothes-item"><%= image_tag(item.image) %></span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>


       <div id="items-grid-container">

        </div>


    </div>
