  <div class="profile">
    <h1>Hello, <%= @user.name %>!</h1>
    <div class="button"><%= link_to "Edit Profile", edit_user_path(@user) %>
  </div>


  <div class="info">
    <h4>
      E-mail: <%= @user.email %><br />
      <%= image_tag @user.image.url %>
    </h4>
  </div>

<div class="wardrobe_list">
  <h1>Your wardrobes!</h1>
    <% if @user.wardrobes.empty? %>
      <h3>You don't have a wardrobe right now</h3>
      <%= link_to "Create new wardrobe", new_wardrobe_path(:user => @user.id) %>
      <!-- <button class="wardrobebutton">New Wardrobe</button> -->


    <% else %>
      <div class="wardrobe"><% @user.wardrobes.each do |wardrobe| %>
        <%= link_to wardrobe.name, wardrobe_path(wardrobe) %><br>
        <% end %>
         </div>
      <p><%= link_to "Create new wardrobe", new_wardrobe_path(:user => @user.id)%><br>    </p>
        <button class="wardrobebutton">New Wardrobe</button>
        <% end %>



        <h1 class="hello">New Wardrobe</h1>



        <div class="modal">

             <form class="getstarted">
                <button type="button" class="close">x</button>
                <input type="text" name="wardrobe[name]" placeholder="Name">
                <button type="button" class="submit">submit</button>

            </form>
        </div>




        <ul class="allwardrobe">
          <li class="mywardrobe">
            <p></p> </li>
        </ul>




  </div>
  </div>


<!-- access the suitcases from user -->
  <h1>Your Suitcases!</h1>
  <% if @user.suitcases.empty? %>
    <h3>You don't have a suitcase right now</h3>
    <%= link_to "Create new suitcase", new_suitcase_path(:user => @user.id) %>

  <% else %>
  <div class="suitcase">
    <%= link_to "View All", suitcases_path %><br>
    <%= link_to "Create new suitcase", new_suitcase_path(:user => @user.id) %>
    <div class="suitcaselist">
    <% @user.suitcases.each do |suitcase| %>
      <%= link_to suitcase.name, suitcase_path(suitcase) %><br>

    <% end %>
    </div>
  </div>
  <% end %>


